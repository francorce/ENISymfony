{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block contenu %}
    <div class="align-items-end">
        <div>Date du jour : {{ 'now'|date('d/m/Y H:i') }}</div>
        <div class="float-right">
            {% if app.user %}
                Participant : {{ app.user.prenom }} {{ app.user.nom|first }}.
            {% else %}
                {{ '' }}
            {% endif %}
        </div>
    </div>

    <div class="example-wrapper">

        <h1>Sortir.com</h1>
        Filtrer les sites :
        <select class="form-select" aria-label="Default select example">

            {% for site in sites %}

                <option selected>{{ site.NomSite }}</option>

            {% endfor %}
        </select>
        <hr>
        <table class="table table-dark">
            <thead>
            <tr>
                <td>ID</td>
                <td>Nom de la sortie</td>
                <td>Date de la sortie</td>
                <td>Clôture</td>
                <td>Inscrits/places</td>
                <td>Etat</td>
                <td>Inscrit</td>
                <td>Organisateur</td>
                <td>Actions</td>
            </tr>
            </thead>
            {% for sortie in sorties %}
                <tbody>
                <tr>
                    <td>{{ sortie.id }}</td>
                    <td>{{ sortie.nom }}</td>
                    <td>{{ sortie.datedebut | date("d/m/Y") }}</td>
                    <td>{{ sortie.datecloture | date("d/m/Y") }}</td>
                    <td>{{ sortie.nbInscriptionsMax }}</td>
                    <td>{{ sortie.etat }}</td>
                    <td>X</td>
                    <td>{{ sortie.participant }}</td>
                    <td><a
                                href="{{ path('app_sortie_detail', {'id': sortie.id}) }}"
                                class="btn btn-primary btn-sm">Afficher
                        </a>
                        {% if sortie.etat == 'En Création' %}
                            <a
                                    href="{{ path('app_sortie_modifier', {'id': sortie.id}) }}"
                                    class="btn btn-warning btn-sm">Modifier
                            </a>
                            <a
                                    href="{{ path('app_sortie_publier', {'id': sortie.id}) }}"
                                    class="btn btn-primary btn-sm">Publier
                            </a>
                        {% endif %}

                    </td>

                </tr>
                </tbody>
            {% endfor %}
        </table>
        <a
                href="{{ path('app_sortie_ajouter') }}"
                class="btn btn-primary btn-sm">Ajouter
        </a>

    </div>
{% endblock %}
