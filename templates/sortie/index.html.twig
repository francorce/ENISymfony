{% extends 'base.html.twig' %}

{% block title %}Hello SortieController!{% endblock %}

{% block contenu %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <h1>Sortie {{ sortie.nom }}</h1>
    <div class="row gx-1 ">


        <div class="col-md-6">
            <table class="table table-dark">
                <tbody>
                <tr>
                    <th>Nom de la sortie :</th>
                    <td>{{ sortie.nom }}</td>
                </tr>
                <tr>
                    <th>Date et heure de la sortie :</th>
                    <td>{{ sortie.datedebut ? sortie.datedebut|date('d/m/Y H:i') : '' }}</td>
                </tr>
                <tr>
                    <th>Date Limite d'inscription :</th>
                    <td>{{ sortie.datecloture ? sortie.datecloture|date('d-m-Y') : '' }}</td>
                </tr>
                <tr>
                    <th>Nombre de places :</th>
                    <td>{{ sortie.nbInscriptionsMax }}</td>
                </tr>
                <tr>
                    <th>Duree :</th>
                    <td>{{ sortie.duree }} minutes</td>
                </tr>
                <tr>
                    <th>Descriptions et infos :</th>
                    <td>{{ sortie.descriptioninfos }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <table class="table table-dark">
                <tbody>
                <tr>
                    <th>Organisateur :</th>
                    <td>{{ sortie.participant }}</td>
                </tr>
                <tr>
                    <th>Campus organisateur :</th>
                    <td>{{ sortie.etablissement }}</td>
                </tr>
                <tr>
                    <th>Ville :</th>
                    <td>{{ sortie.lieux.NomVille }}</td>
                </tr>
                <tr>
                    <th>Rue :</th>
                    <td>{{ sortie.lieux.rue }}</td>
                </tr>
                <tr>
                    <th>Code postal :</th>
                    <td>{{ sortie.lieux.NomVille.CodePostal }}</td>
                </tr>
                <tr>
                    <th>Longitude :</th>
                    <td>{{ sortie.lieux.longitude }}</td>
                </tr>
                <tr>
                    <th>Latitude :</th>
                    <td>{{ sortie.lieux.latitude }}</td>
                </tr>
                </tbody>
            </table>
        </div>


    </div>



    <div class="row gx-5 ">

        <div class="col-md-6">


            <h1>Listes des participants inscrits :</h1>
            <table class="table table-striped table-dark">
                <thead>
                <tr>
                    <td>Pseudo</td>
                    <td>Nom</td>
                </tr>
                </thead>
                {% for participant in sortie.participants %}
                    <tbody>
                    <tr>
                        <td><a href="{{ path('app_profile', {id:participant.id }) }}">{{ participant.pseudo }}</a></td>
                        <td> {{ participant.prenom }} {{ participant.nom }}</td>
                    </tr>
                    </tbody>
                {% endfor %}
            </table>
        </div>
        <a href="{{ path('app_accueil') }}">back to list</a>
        <div class="col-md-6">
        </div>
    </div>


{% endblock %}
